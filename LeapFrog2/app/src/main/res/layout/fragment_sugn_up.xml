<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dns.leapfrog2.module.SugnUpFrag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.dns.leapfrog2.view.CustomHint
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEditText"
            android:ems="10"
            android:layout_gravity="center"
            android:hint="V"
            android:textColor="#000000"
            android:textColorHint="#dadae4" />

        <com.example.dns.leapfrog2.view.CustomHint
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/passEditText"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:hint="@string/pass_locked"
            android:textColorHint="#dadae4"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/phoneEditText"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:hint="Phone"
            android:textColorHint="#dadae4"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="12"
            android:textColor="#ffffff"
            android:text="Create Account"
            android:background="@drawable/login_button_res"/>
    </LinearLayout>

</FrameLayout>
